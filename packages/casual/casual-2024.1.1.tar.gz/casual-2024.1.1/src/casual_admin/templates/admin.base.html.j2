{% extends "base.html.j2" %}

{% block appcontent %}
{% if current_menu.active_item.has_visible_child %}
<div class="row row-cols-1 row-cols-md-{{ config['CASUAL_ADMIN_CARDS_ROW'] }}">
  {%- for item in current_menu.active_item.children -%}
  {% if item.visible and current_user.has_permission() %}
  <div class="col mb-2 mt-2">
    {{ card(title=item.text,
    url=item._endpoint,
    icon=item.icon,
    design=item.design or config['CASUAL_ADMIN_CARDS_DESIGN'],
    ) }}
  </div>
  {% endif %}
  {%- endfor -%}
</div>
{% endif %}
{% endblock %}
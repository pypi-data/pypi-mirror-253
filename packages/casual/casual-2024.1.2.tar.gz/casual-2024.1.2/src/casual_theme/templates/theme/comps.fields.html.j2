{% from 'theme/comps.icons.html.j2' import la %}


{% macro field(title=None, value=None) %}
  <div class="row">
    <div class="col-3 font-weight-bold">{{ title }}</div>
    <div class="col-9">{{ value or la('times-circle')}}</div>
  </div>
{% endmacro %}

{% macro yn(value, reversed=False) %}
  {% if reversed %}
    {% set value = not value %}
  {% endif %}
  {% if value %}
    {{ la('check-square-fill', ['text-success']) }}
  {% else %}
    {{ la('x-square-fill', ['text-danger']) }}
  {% endif %}
{% endmacro %}

{% extends "auth/admin.user.base.html.j2" %}


{% block appcontent %}
  <table class="table " data-order='[[ 1, "asc" ]]' data-page-length='25'>
    <thead class="thead-light">
      <tr>
        <th class="">{{ _('ID') }}</th>
        <th class="">{{ _('Username') }}</th>
        <th class="">{{ _('Active') }}</th>
        <th class="">{{ _('Confirmed') }}</th>
        <th class="">{{ _('Password Change Required') }}</th>
        <th class="">{{ _('Failed Logins') }}</th>
        <th class="">{{ _('Type') }}</th>
        <th class="">{{ _('Actions') }}</th>
      </tr>
    </thead>
    <tbody>
      {% for user in userlist %}
        <tr class="{{ 'table-danger' if not user.active }}">
          <td class="loop-index">{{ user.id }}</td>
          <th>{{ user.username }}</th>
          <td>{{ yn(user.active) }}</td>
          <td>{{ yn(user.confirmed) }}</td>
          <td>{{ yn(user.force_pwd_change) }}</td>
          <td>{{ user.failed_logins }}</td>
          <td>{{ user.type }}</td>
          <td class="d-print-none loop-index">
            {% include 'auth/admin.user.menu.html.j2' %}
          </td>
        </tr>
      {% endfor %}
    </tbody>
  </table>

{% endblock %}


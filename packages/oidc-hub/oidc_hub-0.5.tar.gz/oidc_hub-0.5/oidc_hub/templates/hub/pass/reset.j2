{% extends "registration/password_reset_form.html" %}
{% load i18n static %}

{% block branding %}
<h1 id="site-name"><a href="{% url 'hub:dashboard' %}">{{ _('Research Data Management') }}</a></h1>
{% if user.is_anonymous %}
  {% include "admin/color_theme_toggle.html" %}
{% endif %}
{% endblock %}

{% block breadcrumbs %}
<div class="breadcrumbs">
<a href="{% url 'hub:signin' %}">{% translate 'Log in' %}</a>
&rsaquo; {% translate 'Password reset' %}
</div>
{% endblock %}

{% block content %}

<p>{% translate 'Forgotten your password? Enter your email address below, and weâ€™ll email instructions for setting a new one.' %}</p>

<form method="post">{% csrf_token %}
<fieldset class="module aligned">
    <div class="form-row field-email">
        {{ form.email.errors }}
        <label for="id_email">{% translate 'Email address:' %}</label>
        {{ form.email }}
    </div>
    <input type="submit" value="{% translate 'Reset my password' %}">
</fieldset>
</form>

{% endblock %}

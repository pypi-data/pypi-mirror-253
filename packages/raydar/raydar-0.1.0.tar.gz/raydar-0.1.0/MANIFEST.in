include LICENSE
include README.md

include .bumpversion.cfg
include pyproject.toml
include Makefile

graft perspective_ray_dashboard

# grab js
graft js
prune js/coverage
prune js/dist
prune js/docs
prune js/lib
prune js/node_modules
prune js/yarn.lock

# get rid of test and lint artifacts
prune docs
prune .pytest_cache
prune .ruff_cache
prune .mypy_cache
prune .jupyter

# Patterns to exclude from any directory
global-exclude *~
global-exclude *.pyc
global-exclude *.pyo
global-exclude .git
global-exclude .ipynb_checkpoints
global-exclude *.ipynb

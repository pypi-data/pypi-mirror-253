{% extends "oauthx/base.html.j2" %}
{% set page_title=_("Server error") %}

{% block content %}
<section class="action">
  <div class="text">
    <p class="text-danger">
      {{ _("An unrecoverable error occurred on our server. That's all we know.") }}
    </p>
    <p><strong>{{ _("Incident ID") }}</strong></br><tt>{{ incident_id }}</tt></p>
  </div>
</section>
{% endblock %}

{% block navigation %}
  {% if client_name is defined and return_url is defined %}
  <a class="btn w-100" href="{{ return_url }}">{{ _("Return to ") }}{{ client_name }}</a>
  {% endif %}
{% endblock %}